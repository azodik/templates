{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "out",
    ".react-email",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
